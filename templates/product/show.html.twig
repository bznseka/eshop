{% extends "base.html.twig" %}

{% block h1 %}
	{{ product.title }}
{% endblock %}

{% block body %}

	<a class="btn btn-primary" href="{{ path('app_product_index') }}">Gestion des produits</a>

	<table class="table table-striped table-hover table-bordered text-center mt-4">

		<tr>
			<th>ID</th>
			<td>{{ product.id}}</td>
		</tr>

        <tr>
			<th>Image</th>
			<td>
				<img src={{ asset('image/escarpin_rouge_.jpg' )}} width="15%"/>
			</td>
		</tr>

		<tr>
			<th>Titre</th>
			<td>{{ product.title}}</td>
		</tr>
		<tr>
			<th>Prix</th>
			<td>{{ product.price}}
				€</td>
		</tr>
		<tr>
			<th>Description</th>
			<td>
				{% if product.description %}
					{{ product.description }}
				{% else %}
					<span class="text-warning fst-italic">Non renseignée</span>
				{% endif %}
			</td>
		</tr>

		<tr>
			<th>Catégorie</th>
			<td>
				{% if product.category %}
					<a href="{{ path('app_category_show', {'id' : product.category.id }) }}">{{ product.category.name }}</a>
				{% else %}
					{{ ux_icon('lucide:beer-off', {class : 'text-danger icon'}) }}
				{% endif %}
			</td>
		</tr>

		<tr>
			<th>Marque</th>
			<td>
				{% if product.brand %}
					<a href="{{ path('app_brand_show', {'id' : product.brand.id }) }}">{{ product.brand.name }}</a>
				{% else %}
					{{ ux_icon('lucide:beer-off', {class : 'text-danger icon'}) }}
				{% endif %}
			</td>
		</tr>

{#

#}
		<tr>
			<th>Matière</th>
			<td>
				{% for material in product.materials %}
					{{material.name}}
				{% endfor %}
			</td>
		</tr>
		

	</table>

{% endblock %}
