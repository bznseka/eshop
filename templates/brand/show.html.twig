{% extends 'base.html.twig' %}

{% block title %}Brand{% endblock %}

{% block body %}
    <h1>Marque</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ brand.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ brand.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_brand_index') }}">Toutes les Marques</a>

    <a class="btn btn-secondary" href="{{ path('app_brand_edit', {'id': brand.id}) }}">Modifier</a>

    {{ include('brand/_delete_form.html.twig') }}


    {% if brand.products|length > 0 %}
    
        <table class="table table-striped table-hover table-bordered text-center mt-4">
            <thead class="table-warning">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Prix (â‚¬)</th>
                </tr>
            </thead>

            <tbody>

                {% for product in brand.products %}
                    <tr class="align-middle">
                        <td>{{ product.id }}</td>
                        <td>{{ product.title|capitalize }}</td>
                        <td>{{ product.price }}</td>
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>
    
    {% endif %}

{% endblock %}
